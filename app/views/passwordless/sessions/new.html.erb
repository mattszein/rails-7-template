<%= render(Core::CardComponent.new()) do %>
  <%= image_tag("/images/logo.png", alt: "Logo", class: "w-24 h-24 mx-auto") %>
  <h2 class="text-lg leading-none tracking-tight text-gray-900 md:text-xl lg:text-2xl dark:text-white"> Login into your account</h2>
  <%= form_with(model: @session, scope: :passwordless, url: url_for(action: 'new'), data: { turbo: 'false' }, builder: CustomFormBuilder) do |f| %>
    <%= f.labeled email_field, t("passwordless.sessions.new.email.label"), {for: "passwordless_#{email_field}", focus: true, custom_style: {style: :default}} do %>
      <%= f.text_field email_field, {required: true, autofocus: true, placeholder: "", custom_style: {theme: :primary}} %> 
    <% end %> 
    <div class="mt-10"> 
      <%= f.button t("passwordless.sessions.new.submit"), {fullw: true} %>
    </div>
  <% end %>
<% end %>
