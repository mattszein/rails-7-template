<div class="md:flex justify-between items-center space-y-4 md:space-y-0">
  <h1 class="text-xl font-semibold">Roles</h1>
</div>

<div class="min-w-full max-w-xl overflow-x-auto pb-4">
  <table class="min-w-full divide-y divide-gray-200">
    <thead>
      <tr class="border-b border-gray-200">
        <th class="py-2 px-4 text-left text-xs text-gray-500 font-medium uppercase whitespace-nowrap">Name</th>
        <th class="py-2 px-4 text-left text-xs text-gray-500 font-medium uppercase">Actions</th>
      </tr>
    </thead>

    <tbody class="text-sm divide-y">
      <% @roles.each do |role| %>
        <tr>
          <td class="px-4 py-2"><%= role.name %></td>
          <td class="px-4 py-2 text-center">
            <%= link_to "Show", adminit_role_path(role) , class: "text-indigo-500 font-bold" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
