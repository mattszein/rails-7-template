<table class="min-w-full divide-y divide-gray-200 text-left">
  <thead>
    <tr class="border-b border-gray-200">
      <% @columns.each do |col| %>
        <th class="py-2 px-4 text-left text-xs text-gray-500 font-medium uppercase whitespace-nowrap"><%= col.label %></th>
      <% end %>
    </tr>
  </thead>
  <tbody class="text-sm divide-y">
    <% @rows.each do |row| %>
      <tr>
      <% @columns.each do |col| %>
        <td class="px-4 py-2"><%= view_context.capture(row, &col.td_block) %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
